{
    "mainBar": {
        "layer": "top",
        "position": "top",
        "margin-top": 0,
        "margin-bottom": 0,
        "margin-right": 0,
        "margin-left": 0,
        "modules-left": [
            "clock",
            "custom/separator",
            "cpu",
            "custom/separator",
            "custom/gpu",
            "custom/separator",
            "memory",
            "custom/separator",
            "disk#one"
        ],
        "modules-center": [
            "niri/workspaces",
            "sway/workspaces",
            "sway/mode"
        ],
        "modules-right": [
            "tray",
            "custom/separator",
            "idle_inhibitor",
            "custom/separator",
            "backlight",
            "custom/separator",
            "pulseaudio",
            "custom/separator",
            "network",
            "custom/separator",
            "battery"
        ],
        "clock": {
            "format": "{:%a %d %b %H:%M}",
            "tooltip-format": "<tt><small>{calendar}</small></tt>"
        },
        "cpu": {
            "states": {
                "good": 0,
                "warning": 70,
                "critical": 90
            },
            "interval": 1,
            "format": "CPU {usage:2}%"
        },
        "temperature": {
            "thermal-zone": 3,
            "interval": 1,
            "hwmon-path": "/sys/class/hwmon/hwmon3/temp1_input",
            "critical-threshold": 80,
            "format-critical": "{temperatureC}°C",
            "format": "{temperatureC}°C"
        },
        "custom/gpu": {
            "exec": "nvidia-smi --query-gpu=utilization.gpu --format=csv,noheader,nounits",
            "states": {
                "good": 0,
                "warning": 70,
                "critical": 85
            },
            "interval": 5,
            "format": "GPU {}%"
        },
        "memory": {
            "states": {
                "good": 0,
                "warning": 70,
                "critical": 85
            },
            "interval": 5,
            "format": "MEM {:2}%"
        },
        "disk#one": {
            "states": {
                "good": 0,
                "warning": 70,
                "critical": 95
            },
            "interval": 10,
            "format": "DISK {percentage_used:2}%",
            "path": "/"
        },
        "tray": {
            "icon-size": 16,
            "spacing": 8
        },
        "idle_inhibitor": {
            "format": "{icon}",
            "format-icons": {
                "activated": "",
                "deactivated": ""
            }
        },
        "backlight": {
            "format": "BRI {percent}%"
        },
        "pulseaudio": {
            "format": "SPK {volume}% {format_source}",
            "format-bluetooth": "BLU {volume}% {format_source}",
            "format-source": "MIC {volume}%",
            "on-click": "pavucontrol"
        },
        "network": {
            "format-wifi": "WIFI {signalStrength}%",
            "format-ethernet": "ETH {ifname}",
            "format-disconnected": "NONE",
            "tooltip-format": "{essid} - {ifname}",
            "tooltip-format-disconnected": "Disconnected",
            "interval": 30
        },
        "battery": {
            "states": {
                "good": 100,
                "warning": 35,
                "critical": 20
            },
            "format": "BAT {capacity}%",
            "format-charging": "CHG {capacity}%",
            "events": {
                "on-discharging-warning": "notify-send -u low 'BATTERY LOW' 'Discharging' -t 60000",
                "on-discharging-critical": "notify-send -u critical 'BATTERY CRITICAL' 'Discharging' -t 60000",
                "on-charging-100": "notify-send -u normal -t 60000 'BATTERY FULL' 'Charging'"
            },
            "interval": 10
        },
        "custom/separator": {
            "format": "  ",
            "tooltip": false
        }
    }
}
